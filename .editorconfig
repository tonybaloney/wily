root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
spaces_around_operators = true

[*.{py, pyi}]
indent_size = 4

[Makefile]
indent_style = tab

[*.md]
indent_size = 4
trim_trailing_whitespace = false

[*.rst]
trim_trailing_whitespace = false

[*.bat]
end_of_line = crlf
